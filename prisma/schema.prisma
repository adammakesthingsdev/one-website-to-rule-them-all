generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("DIRECT_URL")
}

enum PortfolioType {
    PROJECT_PERSONAL
    PROJECT_WORK
    PROJECT_SCHOOL
    EMPLOYMENT
}

enum TagColor {
    RED
    GREEN
    BLUE
    GRAY
}

model PortfolioTag {
    id            String          @id
    PortfolioItem PortfolioItem[]
    name          String
    iconUrl       String?
    color         TagColor?
}

model PortfolioItem {
    id             Int            @id @default(autoincrement())
    title          String
    subtitle       String?
    org            String?
    type           PortfolioType?
    tag            PortfolioTag?  @relation(fields: [portfolioTagId], references: [id])
    tagline        String?
    description    String?
    photoUrl       String?
    start          String?
    end            String?
    date           DateTime
    portfolioTagId String?
}
